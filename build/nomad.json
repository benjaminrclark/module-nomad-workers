{
  "name": "{{ instance_id }}",
  "data_dir": "/opt/nomad/data",
  "region" : "{{ region }}",
  "datacenter": "{{ availability_zone }}",
  "leave_on_terminate": false,
  "leave_on_interrupt": false,
  "bind_addr": "0.0.0.0",
  "advertise": {
    "rpc": "{{ bind_address }}:4647"
  },
  "client": {
    "enabled": true,
    "servers": [{{ nomad_servers }}],
    "options": {
      "driver.raw_exec.enable": "1"
    } 
  }
}
